<?xml version="1.0" encoding="utf-8"?>
<wind.widget.jrecyclerview.swipe.JSwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--左菜单-->
    <FrameLayout
        android:id="@+id/fl_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

    <!--右菜单-->
    <FrameLayout
        android:id="@+id/fl_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end" />

    <!--内容-->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</wind.widget.jrecyclerview.swipe.JSwipeItemLayout>
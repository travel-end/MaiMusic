<?xml version="1.0" encoding="utf-8"?>
<wind.widget.rippleview.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_color="@color/grayLight2"
    android:layout_height="@dimen/dp_76">

    <View
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:background="@drawable/shape_light_rect_bg"
        android:layout_marginStart="@dimen/dp_31"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/item_album_iv_cover"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:src="@drawable/temp_rect_cover"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/item_album_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/black2"
        android:textSize="15sp"
        android:text="一万个理由"
        android:layout_toEndOf="@id/item_album_iv_cover"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/item_album_tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_toEndOf="@id/item_album_iv_cover"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:textSize="12sp"
        android:text="庄心妍" />

    <TextView
        android:id="@+id/item_album_tv_public_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_toEndOf="@id/item_album_tv_singer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:textSize="12sp"
        android:text="2015-8-16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_16" />

</wind.widget.rippleview.RippleView>
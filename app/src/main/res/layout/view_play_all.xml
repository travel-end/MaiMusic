<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_34"
    >
    <ImageView
        android:id="@id/view_song_list_iv_play_all"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_14"
        android:src="@drawable/play_full" />

    <TextView
        android:id="@id/view_song_list_tv_play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_54"
        android:text="@string/play_all"
        android:textColor="@color/black_33"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/dp_70"
        android:src="@drawable/download_b"
        android:visibility="visible" />

    <TextView
        android:id="@id/tv_download_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:text="@string/download_all"
        android:textColor="@color/black_33"
        android:layout_marginEnd="@dimen/dp_14"
        android:textSize="15sp" />
</FrameLayout>
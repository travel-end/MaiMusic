<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--    <include-->
    <!--        layout="@layout/view_main_title" />-->
    <LinearLayout
        android:id="@+id/main_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/main_title_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_26"
                android:layout_weight="1.6"
                android:background="@drawable/shape_search_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_12"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="@string/search_content_hint"
                    android:textColor="@color/color999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:src="@drawable/temp_icon" />

                <ImageView
                    android:id="@id/main_title_list"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/list" />
            </FrameLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_44"
            android:layout_marginEnd="@dimen/dp_44">

            <FrameLayout
                android:id="@+id/fl1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fl2"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_title_tab_one_icon"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/temp_logo" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fl3"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/fl1"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_title_tab_two_icon"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/temp_logo"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/fl2"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_title_tab_third_icon"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/temp_logo"
                    android:visibility="gone" />
            </FrameLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@id/frg_main_title_common_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorFullWidth="false"
                app:tabRippleColor="@color/translate"
                app:tabSelectedTextColor="@color/black_33"
                app:tabTextAppearance="@style/tabLayoutTextSize"
                app:tabTextColor="@color/color999999" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/frg_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
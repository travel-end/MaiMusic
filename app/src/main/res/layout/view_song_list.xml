<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/view_song_list_play_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:visibility="gone">

        <ImageView
            android:id="@id/view_song_list_iv_play_all"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_14"
            android:src="@drawable/play_full" />

        <TextView
            android:id="@id/view_song_list_tv_play_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_54"
            android:text="@string/play_all"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@drawable/list"
            android:visibility="gone" />
    </FrameLayout>

    <include
        android:id="@id/loading_song_view"
        layout="@layout/view_loading_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <include
        layout="@layout/view_loading_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/song_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>
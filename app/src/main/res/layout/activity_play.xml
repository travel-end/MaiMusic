<?xml version="1.0" encoding="utf-8"?>
<wind.widget.play.bg.BlurBgLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/play_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_50p"
        android:orientation="vertical">

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/play_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/play_iv_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/selector_btn_action"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_down" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/play_tv_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="麦浪音乐"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/play_tv_song_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    tools:text="Wind Shakes the Barley"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include
                android:id="@+id/play_disk_view"
                layout="@layout/play_discview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/play_lrc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <include
                    android:id="@+id/play_volume_bar"
                    layout="@layout/view_volume_bar" />
                <wind.widget.play.lrc.LrcView
                    android:id="@+id/lrc_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    lrc:lrcAnimationDuration="1000"
                    lrc:lrcCurrentTextColor="@color/white"
                    lrc:lrcDividerHeight="24dp"
                    lrc:lrcNormalTextColor="@color/white_50p"
                    lrc:lrcPadding="40dp"
                    lrc:lrcTextSize="16sp"
                    lrc:lrcLabel=""
                    lrc:lrcTimelineColor="@color/white_50p"
                    lrc:lrcTimelineTextColor="#CCFFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/play_other_fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginEnd="@dimen/dp_34"
                android:layout_marginBottom="@dimen/dp_13"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/play_iv_love"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/selector_love_song" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/color999999"
                        android:text="@string/like" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/play_iv_download"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/download" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/color999999"
                        android:text="@string/download" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/play_iv_collect"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/selector_collect_song" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/color999999"
                        android:text="@string/collect" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/play_iv_surround"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/temp_other" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/color999999"
                        android:text="@string/about" />
                </LinearLayout>




            </LinearLayout>
        </FrameLayout>
        <wind.maimusic.widget.PlayControllerView
            android:id="@+id/play_controller_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33" />


    </LinearLayout>


</wind.widget.play.bg.BlurBgLayout>
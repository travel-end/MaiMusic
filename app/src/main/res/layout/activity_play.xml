<?xml version="1.0" encoding="utf-8"?>
<wind.widget.play.bg.BlurBgLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/play_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_50p"
        android:orientation="vertical">

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/play_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/play_iv_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/selector_btn_action"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_down" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/play_tv_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="麦浪音乐"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/play_tv_song_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    tools:text="Wind Shakes the Barley"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include
                android:id="@+id/play_disk_view"
                layout="@layout/play_discview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/play_lrc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <include
                    android:id="@+id/play_volume_bar"
                    layout="@layout/view_volume_bar" />
                <wind.widget.play.lrc.LrcView
                    android:id="@+id/lrc_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    lrc:lrcAnimationDuration="1000"
                    lrc:lrcCurrentTextColor="@color/colorPrimary"
                    lrc:lrcDividerHeight="24dp"
                    lrc:lrcNormalTextColor="@color/white_50p"
                    lrc:lrcPadding="40dp"
                    lrc:lrcTextSize="16sp"
                    lrc:lrcLabel=""
                    lrc:lrcTimelineColor="@color/white_50p"
                    lrc:lrcTimelineTextColor="#CCFFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/play_other_fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_46"
                android:layout_marginEnd="@dimen/dp_52"
                android:layout_marginBottom="@dimen/dp_28"
                android:layout_gravity="bottom">
                <Button
                    android:id="@+id/play_btn_love"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="@drawable/selector_love_song" />
                <ImageView
                    android:id="@+id/play_iv_download"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginStart="@dimen/dp_40"
                    android:src="@drawable/download" />
<!--                <ImageView-->
<!--                    android:id="@+id/play_iv_add"-->
<!--                    android:layout_width="@dimen/dp_26"-->
<!--                    android:layout_height="@dimen/dp_26"-->
<!--                    android:layout_marginStart="@dimen/dp_40"-->
<!--                    android:src="@drawable/ic_round_add" />-->
<!--                <ImageView-->
<!--                    android:id="@+id/play_iv_pl"-->
<!--                    android:layout_width="@dimen/dp_28"-->
<!--                    android:layout_height="@dimen/dp_28"-->
<!--                    android:layout_marginStart="@dimen/dp_40"-->
<!--                    android:src="@drawable/ic_pinglun" />-->
            </LinearLayout>
        </FrameLayout>
        <wind.maimusic.widget.PlayControllerView
            android:id="@+id/play_controller_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />


    </LinearLayout>


</wind.widget.play.bg.BlurBgLayout>
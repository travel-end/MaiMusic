<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_14"
    android:layout_marginStart="@dimen/dp_14">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/find_sp_iv_icon"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center_vertical"
        android:src="@drawable/temp_rect_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">
        <TextView
            android:id="@+id/find_sp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="都说你眼中开倾世桃花却如何一夕桃花雨下"
            android:textColor="@color/black_33"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/find_tv_sp_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:text="上邪" />
            <Button
                android:id="@+id/find_btn_sp_love"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_gravity="end"
                android:backgroundTint="@color/black_50p"
                android:background="@drawable/selector_love_song" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/poetry_song_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:text="穷极一生到不了的天堂" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="end"
                android:textColor="@color/text_color"
                android:text="预言家" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
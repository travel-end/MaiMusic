<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/frg_main_title_iv_list"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_5"
        android:src="@drawable/list" />

    <wind.widget.tablayout.CommonTabLayout
        android:id="@id/frg_main_title_common_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:tl_indicator_bounce_enable="false"
        app:tl_tab_width="@dimen/dp_100"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/black_33"
        app:tl_textUnselectColor="@color/color999999"
        app:tl_textsize="18sp" />

    <ImageView
        android:id="@id/frg_main_title_iv_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/dp_12"
        android:src="@drawable/search" />

</FrameLayout>
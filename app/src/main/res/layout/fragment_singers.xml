<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_song_list_title" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:text="@string/recommend_singer"
                    android:textColor="@color/text_color"
                    android:background="@drawable/shape_gradient"
                    android:paddingBottom="@dimen/dp_8"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/dp_8"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/singer_rv_recommend"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"/>


            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />
                <TextView
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_26"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="男"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/shape_text_tag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_center"/>
                <TextView
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_26"
                    android:textColor="@color/black2"
                    android:gravity="center"
                    android:text="女"
                    android:textStyle="bold"
                    android:background="@drawable/shape_btn_translate_bg"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/singer_rv_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_song_list_title" />

    <wind.widget.tablayout.CommonTabLayout
        android:id="@id/frg_main_title_common_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_width="@dimen/dp_40"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/black_33"
        app:tl_textsize="15.5sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayNormal" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/frg_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>